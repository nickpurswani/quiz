<body >
    <div class="container" >
    <h1 class="text" style=" text-align: center;">welcome to quiz</h1>
    <hr class="style18">
    <form id="form" method="POST" action="/res">
       
              
            
            
        <% qno = 0 %>
        <% data.forEach((k)=>{%>
            
        <% qno++ %>
        <div id="m<%=qno%>" class="op" style="background-color: black; padding: 5%; position: relative;">
          
        <p style="color: rgb(243, 116, 116);">

            Q<%=qno%>-<%- k.question%>
        </p>
        <% option = []%>
        <% option = k.incorrect_answers %>
        <% option.push(k.correct_answer) %>
        <%
            function shuffleArray(array) {
                for (var i = array.length - 1; i > 0; i--) {
                    var j = Math.floor(Math.random() * (i + 1));
                    var temp = array[i];
                    array[i] = array[j];
                    array[j] = temp;
                }
                return array;
            }
        %>
        <% option = shuffleArray(option) %>
        <% option.forEach(o => { %>
            <div >
               
                    <input id="<%- o%><%= qno %>" class="radio-custom"  type="radio" name="<%= qno %>" value="<%= o %>"  >
                <label for="<%- o%><%= qno %>" class="radio-custom-label">  <%- o%></label>
                
                <!-- <input type="text" class="form-control" aria-label="Text input with radio button" value="<%- o%>" readonly> -->
              </div>
              
                   
                    
                           
        <% }) %>
        
        <div class="box">
            <div class="box-row">
                <div id="n<%=qno%>" class="box-cell box2 wrapper" style="text-align: center; width: 50%; margin-right: 0em;">
                    <svg height="60" width="200"
                        xmlns="http://www.w3.org/2000/svg">
                        <rect class="svg-shape" height="60" width="200"/>
                        <div class="tex">NEXT</div>
                    </svg>
                  </div>
                <div id="p<%=qno%>" class="box-cell box1 wrapper" style="text-align: center; width: 50%; margin-right: 0em;">
            <svg height="60" width="200"
                xmlns="http://www.w3.org/2000/svg">
                <rect class="svg-shape" height="60" width="200"/>
                <div  class="tex">Prev</div>
            </svg>
          </div>
          
        </div>
        </div>
        </div>
        
        <input type="text" name="ans" value="<%=k.correct_answer%>" hidden>
        <% }) %>
        <div id="m11" class="op" style="background-color: black; padding:25% 25% 25% 25%; position: relative; text-align: center;">
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        
        </div>
     </form>
